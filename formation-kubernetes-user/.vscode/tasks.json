{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "kubeval current file",
      "type": "shell",
      "command": "kubeval ${file}",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [
        {
          "owner": "kubeval",
          "fileLocation": [
            "absolute"
          ],
          "pattern": [
            {
              "regexp": "^The document (.*\\.yml) contains an invalid Pod$",
              "file": 1
            },
            {
              "regexp": "^---> (.*)$",
              "message": 1,
              "line": 1,
              "loop": true
            }
          ]
        }
      ]
    },
    {
      "label": "format yaml with yamkix (docker)",
      "type": "shell",
      "command": "docker run -ti --rm -v ${workspaceFolder}:/workspace looztra/yamkix:latest --input /workspace/${relativeFile}",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "format yaml with yamkix",
      "type": "shell",
      "command": "yamkix --input ${file}",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
